{
  "version": 2,
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/index.js"
    }
  ],
  "functions": {
    "api/index.js": {
      "includeFiles": [
        "backend/src/**",
        "backend/package.json",
        "backend/prisma/schema.prisma",
        "backend/node_modules/.prisma/**",
        "backend/node_modules/@prisma/**"
      ]
    }
  },
  "installCommand": "cd backend && npm ci --only=production && npx prisma generate",
  "buildCommand": "mkdir -p dist && echo 'API Running' > dist/index.txt",
  "outputDirectory": "dist",
  "framework": null
}