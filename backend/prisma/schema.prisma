generator client {
  provider = "prisma-client-js"
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id         Int      @id @default(autoincrement())
  name       String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model PortfolioItem {
  id            Int      @id @default(autoincrement())
  title         String
  category_id   Int
  category_name String?
  details       Json
  description   String? // nullable
  isDeleted     Boolean  @default(false) // Added for soft delete
  image         String
  created_at    DateTime @default(now())
  updated_at    DateTime @default(now()) @updatedAt
}

model ContactMessage {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String
  service   String?  @default("other")
  message   String   @db.Text
  honeypot  String?
  ip        String?
  userAgent String?
  createdAt DateTime @default(now())
}

// Added for Admin Audit Logging
model AuditLog {
  id        Int      @id @default(autoincrement())
  actor     String   // Admin username performing the action
  action    String   // 'CREATE' | 'UPDATE' | 'DELETE'
  tableName String   // e.g., 'PortfolioItem'
  recordId  Int      // Affected row ID
  diff      Json     // { before: {}, after: {} }
  createdAt DateTime @default(now())
}